{
  "name": "OAP-assistant",
  "version": "1.7.5",
  "description": "OAP-assistant",
  "manifest_version": 2,
  "permissions": ["webRequest", "activeTab","tabs", "webRequestBlocking",
                  "<all_urls>"],
  "content_security_policy": "script-src 'self' https://cdn.firebase.com https://*.firebaseio.com; object-src 'self'",
  "background": {
    "scripts": ["src/content_script.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["src/content_style.css"],
      "js": ["src/jquery-2.1.0.min.js","src/firebase.js", "src/content_script.js"],
	  "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
      
  ],
  "icons" : {
   
  }

}
